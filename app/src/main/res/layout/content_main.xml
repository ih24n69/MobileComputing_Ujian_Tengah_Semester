<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="muhammadihsan.sandroidteam.id.ujiantengahsemester1.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/btnToast"
        android:onClick="showToast"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Simple Toast"
        android:layout_height="wrap_content"
        android:layout_width="500px" />

    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/btnToastCustom"
        android:onClick="showTostCustom"
        android:text="Custom Toast"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnToast"
        android:layout_alignStart="@+id/btnToast" />

    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:id="@+id/btnSimpleDialog"
        android:onClick="keSimpleDialog"
        android:layout_below="@+id/btnToastCustom"
        android:layout_alignStart="@+id/btnToastCustom"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/btnToast"
        android:text="Simple Dialog" />

    <Button
        android:text="Custom Dialog"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSimpleDialog"
        android:layout_alignStart="@+id/btnSimpleDialog"
        android:layout_marginTop="10dp"
        android:id="@+id/btnCustomDialog"
        android:layout_alignEnd="@+id/btnSimpleDialog"
        android:onClick="keCustomDialog"/>

    <Button
        android:text="Choice Dialog"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnChoiceDialog"
        android:onClick="keChoiceDialog"
        android:layout_below="@+id/btnCustomDialog"
        android:layout_alignStart="@+id/btnCustomDialog" />

    <Button
        android:text="Date Picker"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnDatePicker"
        android:onClick="keDatePicker"
        android:layout_below="@+id/btnChoiceDialog"
        android:layout_alignStart="@+id/btnChoiceDialog" />

    <Button
        android:text="Notificatios"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNotif"
        android:onClick="keNotifikasi"
        android:layout_below="@+id/btnDatePicker"
        android:layout_alignStart="@+id/btnDatePicker" />

</RelativeLayout>
